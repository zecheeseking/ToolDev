<Window x:Class="IvyGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IvyGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Load model..." Command="{Binding LoadModelCommand}" CommandParameter="{Binding ElementName=SceneWindow}"/>
                    <MenuItem Header="Export Selected Ivy" Command="{Binding LoadModelCommand}" CommandParameter="{Binding ElementName=SceneWindow}"/>
                </MenuItem>
                <MenuItem Header="Add">
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
