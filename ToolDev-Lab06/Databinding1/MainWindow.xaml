<Window x:Class="Databinding1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Databinding1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textbox_TestBinding" VerticalAlignment="Center" Width="100" Height="20" Margin="0,0,0,90"/>
        <Label VerticalAlignment="Center" Width="100" Height="50" Margin="0,0,0,0" Content="{Binding ElementName=textbox_TestBinding, Path=Text}"/>
    </Grid>
</Window>
